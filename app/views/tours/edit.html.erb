  <div class="mx-auto md:w-2/3 w-full">
    <h1 class="font-bold text-4xl">採集行を編集</h1>

    <%= render "form", tour: @tour %>

    <%= link_to "詳細に戻る", @tour, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium",
      data: { turbo_frame: "content-zone", turbo_action: "advance" }
    %>
    <%= link_to "一覧に戻る", tours_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium",
      data: { turbo_frame: "content-zone", turbo_action: "advance" }
    %>
  </div>
<% end %>
