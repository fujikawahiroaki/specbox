<div class="w-full">
  <div id="flash-space" class="fixed top-5 right-5 w-80"></div>
  <%= yield %>
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="flash-message" data-controller="flash"><%= notice %></p>
  <% end %>

  <% content_for :title, "Tours" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">採集行</h1>
    <%= link_to "作成", new_tour_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="tours" class="min-w-full">
    <% @tours.each do |tour| %>
      <%= render tour %>
      <p>
        <%= link_to "詳細", tour, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
